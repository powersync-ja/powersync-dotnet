<Page x:Class="PowersyncDotnetTodoList.Views.TodoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:PowersyncDotnetTodoList.ViewModels"
      Title="To-Do Items">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0"
                Content="â† Back"
                Command="{Binding BackCommand}"
                Width="120"
                Height="40"
                Background="#2196F3"
                Foreground="White"
                FontSize="14"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Left"
                Margin="20,20,0,10"/>

        <!-- List Name -->
        <TextBlock Grid.Row="0"
                   Text="{Binding ListName}"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"/>

        <!-- To-Do List Section -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Margin="20"
                Padding="20"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Input Field -->
                    <RowDefinition Height="Auto"/>
                    <!-- Add Button -->
                    <RowDefinition Height="*"/>
                    <!-- ListBox (Takes remaining space) -->
                </Grid.RowDefinitions>

                <!-- Input for new to-do -->
                <TextBox Grid.Row="0"
                         Text="{Binding NewTodoName, UpdateSourceTrigger=PropertyChanged}"
                         Width="300"
                         Height="35"
                         FontSize="14"
                         Padding="5"
                         Margin="0,0,0,10"
                         BorderBrush="#CCCCCC"/>

                <!-- Add To-Do Button -->
                <Button Grid.Row="1"
                        Content="Add Todo"
                        Command="{Binding AddTodoCommand}"
                        CommandParameter="{Binding NewTodoName}"
                        Width="120"
                        Height="40"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"/>
                <!-- To-Do Items List -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding Todos}"
                         SelectedItem="{Binding SelectedTodo, Mode=TwoWay}"
                         Background="White"
                         BorderBrush="#CCCCCC"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FAFAFA"
                                    Padding="10"
                                    Margin="0,5,0,0"
                                    CornerRadius="6"
                                    HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Task Description -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Checkbox + Delete Button -->
                                    </Grid.RowDefinitions>

                                    <!-- Task Description -->
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Description}"
                                               FontSize="14"
                                               Foreground="#333"
                                               Padding="5"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,5"/>

                                    <!-- Checkbox and Delete Button Row -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Checkbox -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Spacer -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Delete Button -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox for completion -->
                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding Completed}"
                                                  Command="{Binding DataContext.ToggleCompleteCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                  CommandParameter="{Binding}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>

                                        <!-- Delete Button (Far Right) -->
                                        <Button Grid.Column="2"
                                                Content="Delete"
                                                Command="{Binding DataContext.DeleteTodoCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Width="80"
                                                Height="30"
                                                Background="Red"
                                                Foreground="White"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Page>
